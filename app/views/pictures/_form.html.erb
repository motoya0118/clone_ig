<%= form_with(model: picture, local: true,url: confirm_throught) do |form| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
        <% picture.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-light">
    <div class="field mb-3">
      <%= form.label :image,class: "form-label text-center"%>
      <!-- 確認画面から新規作成画面に戻った時に、 -->
      <!-- アップロードした画像を表示させるための記述 -->
      <%= image_tag(picture.image.url) if picture.image && picture.image.url %>
      <%= form.file_field :image,class: "form-control form-control w-75" %>
      <%= form.hidden_field :image_cache %>
    </div>

    <div class="field mb-3 mx-auto">
      <%= form.label :content ,class: "form-label"%>
      <%= form.text_field :content ,class: "form-control w-75"%>
    </div>

    <div class="actions">
      <%= form.submit "投稿", class: "btn btn-primary p-3"%>
    </div>
  </div>
<% end %>
