<!DOCTYPE html>
<html>
  <head>
    <title>CloneIg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: "#{key}") %>
   <% end %>
   <nav class="navbar navbar-light justify-content-start" style="background-color: #e3f2fd;">
     <% if logged_in? %>
        <%= link_to "写真一覧", pictures_path ,class: "nav-link"%>
        <%= link_to "写真投稿", new_picture_path ,class: "nav-link"%>
        <%= link_to "Profile", user_path(current_user.id) ,class: "nav-link"%>
        <%= link_to "Logout", session_path(current_user.id), method: :delete ,class: "nav-link"%>
     <% else %>
        <%= link_to "Sign up", new_user_path ,class: "nav-link"%>
        <%= link_to "Login", new_session_path ,class: "nav-link"%>
     <% end %>
  </nav>

    <%= yield %>
  </body>
</html>
